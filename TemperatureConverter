public class TemperatureConverter {
   double temperature;
   public void convertTemp(int temperature, char converTo) {
if (converTo=='C') {
            this.tempereture=(temperature*1.8)+32;
            System.out.println("Fahrenheit = "+this.temperature);}
if (converTo=='F') {
            this.tempereture= (temperature-32)*1.8;
            System.out.println("Celsius = "+this.temperature);} 
public static void main(String[] args) {
    TemperatureConverter myTC = new TemperatureConverter ();
    myTC.convertTemp(21,'F'); } } // Results "Fahrenheit -19.8"
